<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <jta-data-source>java:app/JPAExampleDataSource</jta-data-source>
        <class>dit126.model.entity.ActivityEntity</class>
        <class>dit126.model.entity.AppUserEntity</class>
        <class>dit126.model.entity.LocationEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
